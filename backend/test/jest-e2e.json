{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
  "collectCoverageFrom": ["src/**/*.(t|j)s", "!src/**/*.d.ts", "!src/main.ts"],
  "coverageDirectory": "../coverage-e2e",
  "testTimeout": 30000
}
