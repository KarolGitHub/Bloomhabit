{
  "name": "bloomhabit",
  "version": "1.0.0",
  "description": "A habit-focused app that helps users create and maintain good habits using a garden-inspired metaphor",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npx nuxt dev",
    "dev:backend": "cd backend && npm run start:dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npx nuxt build",
    "build:backend": "cd backend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm run start:prod",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "db:setup": "cd backend && npm run db:setup",
    "db:migrate": "cd backend && npm run db:migrate"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "habits",
    "productivity",
    "garden",
    "pwa",
    "nuxt",
    "nestjs",
    "ai",
    "foundation",
    "tailwind",
    "responsive"
  ]
}
